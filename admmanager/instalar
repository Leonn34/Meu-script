rm -rf /root/admmanager*
rm -rf /root/manager*

#instalando#
mv /root/adm1 /root/adm
touch /tmp/files
touch /tmp/files2
for att in `ls /root/adm/`
do
files9 $att
done
echo  -e "\033[0m"
abc=$(cat /tmp/files |wc -l)
abc2=$(cat /tmp/files2)
if [ "$abc" = "0" ]; then
echo -e "\033[1;31mNAO HA ATUALIZACOES DISPONIVEIS PARA SEU GERENCIADOR  ADM!\033[0m"
rm -rf /tmp/files
rm -rf /tmp/files2
rm -rf /root/adm*
sleep 5s
exit
fi
;;
 2)
cd /root/
echo -e "CONFIGURANDO"
echo  -e "\033[1;32m"
unzip /root/manager
mv -f /root/admmanager/adm2.zip /root/
rm -rf /root/admmanager/adm1.zip
rm -rf /root/admmanager/adm3.zip
rm -rf /root/admmanager/adm4.zip
unzip /root/adm2
rm -rf /root/adm2.zip
mv -f /root/admmanager/* /root/adm2/
touch /bin/instalacao2
rm -rf /root/admmanager*
rm -rf /root/manager*

#instalando#
mv /root/adm2 /root/adm
touch /tmp/files
touch /tmp/files2
for att in `ls /root/adm/`
do
files9 $att
done
echo  -e "\033[0m"
abc=$(cat /tmp/files |wc -l)
abc2=$(cat /tmp/files2)
if [ "$abc" = "0" ]; then
echo -e "\033[1;31mNAO HA ATUALIZACOES DISPONIVEIS PARA SEU GERENCIADOR  ADM!\033[0m"
rm -rf /tmp/files
rm -rf /tmp/files2
rm -rf /root/adm*
sleep 5s
exit
fi
;;
 3)
cd /root/
