#!/bin/bash
fim="\033[0m"
preto="\033[0;30m"
vermelho="\033[0;31m"
verde="\033[0;32m"
amarelo="\033[0;33m"
azul="\033[0;34m"
purple="\033[0;35m"
cyan="\033[0;36m"
cinzaa="\033[0;37m"
pretoCinza="\033[1;30m"
vermelhoo="\033[1;31m"
verdee="\033[1;32m"
amareloo="\033[1;33m"
azull="\033[4;34m"
rosa="\033[1;35m"
cyann="\033[2;36m"
branco="\033[1;37m"
cyann="\033[2;36m"
if [ $(id -u) -eq 0 ]
then
	clear
else
	if echo $(id) |grep sudo > /dev/null
	then
	clear
	echo "Voce não é root"
	echo "Seu usuario esta no grupo sudo"
	echo -e "Para virar root execute \033[1;31msudo su\033[0m"
	exit
	else
	clear
	echo -e "Vc nao esta como usuario root, nem com seus direitos (sudo)\nPara virar root execute \033[1;31msu\033[0m e digite sua senha root"
	exit
	fi
fi
files9 () {
arq="/bin/$1"
arq2="/root/adm/$1"
equal=$(diff -q $arq $arq2)
if [ "$equal" = "" ]; then
rm -rf $arq2
else
mv -f $arq2 $arq
chmod 777 $arq
echo "1" >> /tmp/files
echo "$1" >> /tmp/files2
fi
}
cp /etc/ssh/sshd_config /etc/ssh/sshbak
if [[ -e /bin/instalacao1 ]]; then
opcao="1"
else
 if [[ -e /bin/instalacao2 ]]; then
opcao="1"
else
  if [[ -e /bin/instalacao3 ]]; then
opcao="1"
else
   if [[ -e /bin/instalacao4 ]]; then
opcao="1"
else
clear
opcao="2"
clear
   fi
  fi
 fi
fi
####DETECTADO####
if [ "$opcao" = "1" ]
then
######SCRIPTOPÇAO1####
###INICIOSubMenu##
if [[ -e /bin/instalacao1 ]]; then
systema="1"
echo -e "\033[1;31mATUALIZACAO ADM OPENSSH\033[0m"
echo -e ""
sleep 1s
ger="ADM OPENSSH E SQUID3"
else
 if [[ -e /bin/instalacao2 ]]; then
systema="2" 
echo -e "\033[1;31mATUALIZAÇAO ADM DROPBEAR\033[0m"
echo -e ""
ger="DROPBEAR COM OU SEM SQUID3"
sleep 1s
else
  if [[ -e /bin/instalacao3 ]]; then
systema="3"
echo -e "\033[1;31m\033[0m"
echo -e ""
ger=""
sleep 1s
else
   if [[ -e /bin/instalacao4 ]]; then
systema="4"
echo -e "\033[1;31mATUALIZAÇAO ADM OPENSSH PH V2\033[0m"
echo -e ""
ger="VPS MANAGER V2 SSH E SQUID"
sleep 1s
   fi
  fi
 fi
fi
###FimSubmenu##
sleep 1s
cd /root/
wget -O manager.zip wget -O manager https://github.com/wellingtal/Meu-script/blob/master/admmanager.zip -o /dev/nul
sleep 1s
echo  -e "\033[1;32m"
echo -e "\033[1;31mO GERENCIADOR ADM QUE VOCE ESTA USANDO E...
\033[1;36m
$ger
\033[1;31m"
sleep 5s
echo -e "\033[1;36mFAZENDO A ANALISE DE TODOS ARQUIVOS DA INSTALACAO!...\033[0m"
echo -e "\033[0m"
case $systema in
 1)
cd /root/
echo -e "ANALISANDO!..."
echo  -e "\033[1;32m"
unzip /root/manager
mv -f /root/admmanager/adm1.zip /root/
rm -rf /root/admmanager/adm2.zip
rm -rf /root/admmanager/adm3.zip
rm -rf /root/admmanager/adm4.zip
unzip /root/adm1
rm -rf /root/adm1.zip
mv -f /root/admmanager/* /root/adm1/
